  <style>
    body { font-family: Calibri, sans-serif; padding: 20px; background: #f9f9f9; color: #333; }
    h2 { margin-top: 30px; }
    table { border-collapse: collapse; width: 100%; margin-top: 10px; }
    th, td { border: 1px solid #ccc; padding: 8px 12px; text-align: left; }
    th { background: #f0f0f0; }
    .highlight { background: #e8ffe8; }
    .overpaid { color: green; font-weight: bold; }
    .countdown { font-size: 1.2em; color: #c00; margin-top: 10px; }
  </style>
</head>
<body>

